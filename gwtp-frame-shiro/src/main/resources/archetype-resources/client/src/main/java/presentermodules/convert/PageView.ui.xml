<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
 xmlns:g='urn:import:com.google.gwt.user.client.ui'>

<ui:style gss="true">
@def COLOR_TONE                     #1a73e8;
@def SOURCE_TARGET_CONTAINER_WIDTH  900px;
@media screen and (min-width: 720px) {
.pageContentWrap {
    min-height: calc(100vh - 65px - 56px - 148px - 72px);
} }

@media screen and (min-width: 1280px) {
.pageContentWrap {
    min-height: auto;
} }

.mainHeader {
    padding: 48px 0px 48px 0px;
    width: 100%;
    box-shadow: 0 2px 2px rgba(0,0,0,0.22);
}

.frame {
	width: 100%;
	margin: 0 auto;
}

.sourceTargetRow {
    width:              SOURCE_TARGET_CONTAINER_WIDTH;
    height:    200px;
    margin:    0px auto;
    display: flex;
    flex-flow: row nowrap;
    border-radius: 10px;
    background:			transparent;
}

.convertWindow {
    margin:             50px 0px 0px 0px;
    height:             100%;
    width:              sub(divide(SOURCE_TARGET_CONTAINER_WIDTH, 2), 2px);
    border:             1px solid COLOR_TONE;
    background:			#fff;
}

.textAreaWrap {
	margin: 0;
	height: 150px;
}

.textArea {
    -webkit-appearance: textarea;
    background-color: white;
    -webkit-rtl-ordering: logical;
    cursor: text;
    white-space: pre-wrap;
    overflow-wrap: break-word;
    flex-direction: column;

    border:             0px;
    overflow: auto hidden;
    box-sizing: border-box;
    height: 100%;
    direction: ltr;

    padding: 20px 28px;
    
    font-size: 24px;
    line-height: 32px;
    resize: none;
    width: 100%;
}

.textArea:focus {
    border-bottom: 0;
    outline: none!important;
}

.translation {
    padding: 20px 28px;

    height: 150px;

    font-size: 24px;
    line-height: 32px;
    min-height: 110px;
    width: 100%;
}

.targetNote {
    color:              #fff;
    line-height:        50px;
    text-align:         -webkit-center;
    font-size: 24px;
    background:			COLOR_TONE;
}

.middle {
	width: 4px;
	height: 100%;
}

</ui:style>

 <g:FlowPanel ui:field="container" styleName="{style.frame}">
  <g:FlowPanel styleName="{style.pageContentWrap}">
   <g:FlowPanel styleName="{style.mainHeader}">
    <g:FlowPanel styleName="{style.sourceTargetRow}">
     <g:FlowPanel styleName="{style.convertWindow}">
     	<g:SimplePanel styleName="{style.textAreaWrap}">
      <g:TextArea ui:field="inputArea"  styleName="{style.textArea}"/>
      </g:SimplePanel>
      <g:Label styleName="{style.targetNote}">汉字</g:Label>
     </g:FlowPanel>
	 <g:SimplePanel styleName="{style.middle}"/>
     <g:FlowPanel styleName="{style.convertWindow}">
      <g:SimplePanel ui:field="translation" styleName="{style.translation}"/>
      <g:Label styleName="{style.targetNote}">UNICODE编码</g:Label>
     </g:FlowPanel>
    </g:FlowPanel>
   </g:FlowPanel>
  </g:FlowPanel>
 </g:FlowPanel>
</ui:UiBinder>