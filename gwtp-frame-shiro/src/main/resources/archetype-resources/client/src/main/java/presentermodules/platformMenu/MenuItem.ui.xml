<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
 xmlns:g='urn:import:com.google.gwt.user.client.ui'>

<ui:style gss="true">
@def COLOR_TONE eval("${package}.resource.Resources.getToneColor()");
@def NAV_MENU_WIDTH               180px;
@def NAV_MENU_HEIGHT              60px;

.navItem {
margin:   2px;
width:    NAV_MENU_WIDTH;
height:   NAV_MENU_HEIGHT;
background-color:  COLOR_TONE;
display:           inline-flex;
display:           -webkit-inline-box;
cursor: pointer;
}
.menuItemTitle {
padding:       0px;
font-size:     20px;
font-weight:   bold;
line-height:   NAV_MENU_HEIGHT;
color:         #fff;
width:         sub(NAV_MENU_WIDTH, NAV_MENU_HEIGHT);
text-align:    -webkit-left;
}
.menuIconContainer {
width:        NAV_MENU_HEIGHT;
height:       NAV_MENU_HEIGHT;
padding:      15px;
fill:         #fff;
}
</ui:style>
 
<g:HTMLPanel styleName="{style.navItem}">
 <div class="{style.menuIconContainer}" ui:field="iconContainer"/>
 <g:Label styleName="{style.menuItemTitle}" ui:field="title" />
</g:HTMLPanel>
</ui:UiBinder>